@model IEnumerable<NayanTraders.Models.Product>

@{
    ViewBag.Title = "All";
    Layout = "~/Views/Shared/OtherPageLayout.cshtml";
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Name(Code)<br />
            Category(Brand)
        </th>

        <th>
            Size
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Unit.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.Name
                ( @item.Code)<br />
                @item.Category.Name
                (@item.Brands.Name)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Size.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Unit.Name)
            </td>

            <td>
                Total:<span style="text-decoration:line-through;">@item.Price</span> -@item.Discount%=@(int.Parse(item.Price) - ((int.Parse(item.Price) * int.Parse(item.Discount)) / 100)) BDT
            </td>

            <td>
                <img src="../Upload/ProductImage/@(item.Id.ToString()+"_"+item.Image)" height="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
